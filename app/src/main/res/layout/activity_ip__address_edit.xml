<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exit_layout"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:text="Ip Address"
        android:textColor="#333"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal" >

        <EditText
            android:id="@+id/ip_edit_1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@null"
            android:gravity="bottom"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="192"
            android:hint="0" />

        <TextView
            android:id="@+id/dot_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ip_edit_1"
            android:layout_toRightOf="@id/ip_edit_1"
            android:text="."
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ip_edit_2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dot_1"
            android:textCursorDrawable="@null"
            android:gravity="bottom"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="168"
            android:hint="0" />

        <TextView
            android:id="@+id/dot_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ip_edit_1"
            android:layout_toRightOf="@id/ip_edit_2"
            android:singleLine="true"
            android:text="."
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ip_edit_3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dot_2"
            android:textCursorDrawable="@null"
            android:gravity="bottom"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="1"
            android:hint="0" />

        <TextView
            android:id="@+id/dot_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ip_edit_1"
            android:layout_toRightOf="@id/ip_edit_3"
            android:text="."
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ip_edit_4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dot_3"
            android:textCursorDrawable="@null"
            android:gravity="bottom"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="118"
            android:hint="0" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="33dp" >

        <Button
            android:id="@+id/okBtn"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:background="@color/colorGreen"
            android:gravity="center"
            android:onClick="okBtnClick"
            android:text="OK"
            android:textColor="#fff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:onClick="cancelBtnClick"
            android:text="Cancel"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:textColor="#333"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>